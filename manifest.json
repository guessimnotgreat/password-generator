{
    "manifest_version": 3,
    "name": "Password Generator Extension",
    "version": "1.0",
    "description": "Generate secure passwords easily.",
    "action": {
        "default_popup": "index.html",
        "default_icon": "icon.png"
    },
    "permissions": [
        "activeTab",
        "storage",
        "clipboardWrite"
    ],
    "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
    }
}